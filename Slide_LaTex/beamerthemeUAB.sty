\mode<presentation>

%\useinnertheme[shadow=true]{rounded}
%\useinnertheme{rounded}
\useinnertheme{circles}
\useoutertheme{infolines}
\usecolortheme{UAB}

\setbeamercolor{UAB logo}{fg=UABdarkgreen,bg=white}
\setbeamercolor{UAB rule}{fg=UABdarkgreen,bg=UABlightgreen}
\setbeamercolor{UAB footer}{fg=black,bg=white}
\setbeamercolor{UAB header}{fg=white,bg=UABlightgreen}
\setbeamerfont{details in UAB foot}{size=\Tiny}
\setbeamerfont{logo in UAB foot}{size=\normalsize}
\setbeamerfont{page number in UAB foot}{size=\tiny}

%\pgfdeclareimage[height=0.5cm]{university-logo}{UAB-logo.png}
\pgfdeclareimage[height=0.5cm]{university-logo}{SOPH_tagline.png}

\defbeamertemplate*{footline}{UAB theme}
{
  \leavevmode%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1pt]{UAB rule}%
    \hrulefill%
  \end{beamercolorbox}\par%
  \hbox{%
    \begin{beamercolorbox}[wd=.4\paperwidth,ht=5ex,dp=1.15ex]{UAB logo}%
      \usebeamerfont{logo in UAB foot}\hbox{\pgfuseimage{university-logo}}
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.2\paperwidth,ht=5ex,dp=1.15ex,center]{UAB footer}%
      \usebeamerfont{page number in UAB foot}\insertframenumber{} / \inserttotalframenumber%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.4\paperwidth,ht=5ex,dp=1.15ex,vmode]{UAB footer}%
       \begin{beamercolorbox}[wd=.4\paperwidth,ht=1.5ex,dp=0.5ex,right,top]{UAB footer}%
         \usebeamerfont{details in UAB foot}\insertslideinfo{}\hspace*{2em}%
       \end{beamercolorbox}%
       \begin{beamercolorbox}[wd=.4\paperwidth,ht=1.5ex,dp=0.5ex,right,bot]{UAB footer}%
         \usebeamerfont{details in UAB foot}\insertcopyright{}\hspace*{2em}%
       \end{beamercolorbox}%
    \end{beamercolorbox}}%
  \vskip0pt%
}

\defbeamertemplate*{headline}{UAB theme}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,right]{section in head/foot}%
    \usebeamerfont{section in head/foot}\insertsectionhead\hspace*{2ex}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,left]{subsection in head/foot}%
    \usebeamerfont{subsection in head/foot}\hspace*{2ex}\insertsubsectionhead
  \end{beamercolorbox}%
}\par%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1pt]{section in head/foot}%
  \usebeamerfont{author in head/foot}\hrulefill%
  \end{beamercolorbox}%
  \vskip0pt%
}

\setbeamersize{text margin left=1em,text margin right=1em}

\setbeamerfont{block title}{size={}}

\mode
<all>
